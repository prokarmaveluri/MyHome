<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="handlers"
            type="com.dignityhealth.myhome.features.login.LoginFragment.LoginViewClickEvent" />
    </data>

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context="com.dignityhealth.myhome.features.login.LoginActivity">

        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="60dp"
            android:src="@mipmap/home_logo" />

        <RelativeLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/web_view_redirect"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/email"
                style="@style/tradeGothicLTStd_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/password"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="52dp"
                android:layout_marginRight="52dp"
                android:hint="@string/prompt_email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />


            <android.support.design.widget.TextInputEditText
                android:id="@+id/password"
                style="@style/tradeGothicLTStd_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/log_in_button"
                android:layout_marginBottom="36dp"
                android:layout_marginLeft="52dp"
                android:layout_marginRight="52dp"
                android:drawableRight="@mipmap/show_password"
                android:hint="@string/prompt_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <Button
                android:id="@+id/log_in_button"
                style="@style/grayButtonStyle"
                android:layout_width="match_parent"
                android:layout_above="@+id/forgot_password"
                android:layout_marginBottom="48dp"
                android:layout_marginLeft="52dp"
                android:layout_marginRight="52dp"
                android:onClick="@{handlers::onClickEvent}"
                android:text="@string/action_Login"
                android:textAllCaps="false"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/forgot_password"
                style="@style/tradeGothicLTStd_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/login_help"
                android:layout_centerHorizontal="true"
                android:onClick="@{handlers::onClickEvent}"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:text="@string/forgot_password"
                android:textAlignment="center"
                android:textColor="@color/primary" />

            <TextView
                android:id="@+id/login_help"
                style="@style/tradeGothicLTStd_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/enroll_now"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:onClick="@{handlers::onClickEvent}"
                android:padding="16dp"
                android:text="@string/login_help"
                android:textAlignment="center"
                android:textColor="@color/primary" />

            <TextView
                android:id="@+id/enroll_now"
                style="@style/tradeGothicLTStd_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/primary"
                android:onClick="@{handlers::onClickEvent}"
                android:padding="16dp"
                android:text="@string/enroll_now"
                android:textAlignment="center"
                android:textColor="@color/white" />
        </RelativeLayout>


        <WebView
            android:id="@+id/web_view_redirect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- Login progress -->
        <ProgressBar
            android:id="@+id/login_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="8dp"
            android:indeterminate="true"
            android:visibility="gone" />
    </RelativeLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handlers"
            type="com.dignityhealth.myhome.features.enrollment.tc.TermsOfServiceActivity.TCViewClickEvent" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.dignityhealth.myhome.features.enrollment.tc.TermsOfServiceActivity">

        <TextView
            android:id="@+id/terms_of_service"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="Terms Of Service here..."
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="25dp" />

        <ProgressBar
            android:id="@+id/terms_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:visibility="gone"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tc_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_boarder_teal"
                android:onClick="@{handlers::onClickEvent}"
                android:padding="16dp"
                android:text="Cancel"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tc_accept"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_boarder_teal"
                android:onClick="@{handlers::onClickEvent}"
                android:padding="16dp"
                android:text="Accept"
                android:textAlignment="center" />
        </LinearLayout>
    </RelativeLayout>
</layout>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:background="@color/color_msg_list_stripe_1"
    android:padding="16dp">

    <TextView
        android:id="@+id/visit_report_provider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AmericanWell.Medium"/>

    <TextView
        android:id="@+id/visit_report_datetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AmericanWell.Small"/>

</LinearLayout>

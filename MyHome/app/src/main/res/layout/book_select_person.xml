<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="18dp"
    android:paddingRight="18dp">

    <TextView
        style="@style/tradeGothicLTStd_Dynamic20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/booking_select_person_header" />

    <Button
        android:id="@+id/book_me"
        style="@style/selectableButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="@string/me"
        android:textStyle="bold"
        android:contentDescription="@string/appointment_me"/>

    <Button
        android:id="@+id/book_other"
        style="@style/selectableButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="@string/family_member"
        android:contentDescription="@string/appointment_family_member"
        android:textStyle="bold" />

</LinearLayout>

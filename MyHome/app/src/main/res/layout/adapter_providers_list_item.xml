<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="handlers"
            type="com.dignityhealth.myhome.features.fad.ProvidersAdapter.ProviderClick" />
    </data>

    <RelativeLayout
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{handlers::onClickProvider}"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/docImage"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:id="@+id/docInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/docImage">

            <TextView
                android:id="@+id/docDisplayName"
                style="@style/tradeGothicLTStd_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Richard paul, MD" />

            <TextView
                android:id="@+id/docSpeciality"
                style="@style/tradeGothicLTStd_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/docDisplayName"
                android:text="Richard paul, MD" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="10.4 miles" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/distance"
                android:layout_marginTop="16dp"
                android:drawableRight="@android:drawable/ic_menu_send"
                android:gravity="center"
                android:text="View"
                android:textAlignment="center"
                android:textColor="@color/light_blue" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/docInfoLayout"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/docImage">

            <ImageView
                android:id="@+id/locationIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_btn_speak_now" />

            <TextView
                android:id="@+id/docAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/locationIcon"
                android:text="Denver, CO" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="16dp"
            android:background="@color/grey" />
    </RelativeLayout>
</layout>
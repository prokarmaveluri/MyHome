<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appointment_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dp">

    <ImageView
        android:id="@+id/doctor_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/logo" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/doctor_image"
        android:gravity="center"
        android:text="Thurs May 26"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="2:45 PM"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/facility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:layout_toRightOf="@id/doctor_image"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="Sequoia Hospital"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/doctor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/facility"
        android:layout_toRightOf="@id/doctor_image"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="Dr. Steven M. Howard, MD"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/pin_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/time"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/logo" />

</RelativeLayout>
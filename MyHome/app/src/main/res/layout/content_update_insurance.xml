<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".profile.UpdateInsuranceActivity"
    tools:showIn="@layout/activity_update_insurance">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Switch
            android:id="@+id/no_insurance_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/update_insurance_no_insurance"/>

        <TextView
            android:id="@+id/health_plan_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update_insurance_insurance_provider"/>

        <Spinner
            android:id="@+id/health_plan_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/update_insurance_margin_top"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/subscriber_id_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/update_insurance_margin_top">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/subscriber_id_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/update_insurance_subscriber_id"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/subscriber_suffix_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/subscriber_suffix_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/update_insurance_subscriber_suffix"/>
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/card_image"
            android:layout_width="340dp"
            android:layout_height="243dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/update_insurance_margin_top"
            android:gravity="center_horizontal"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/relationship_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/update_insurance_margin_top"
            android:text="@string/update_insurance_relationship_prompt"/>

        <Spinner
            android:id="@+id/relationship_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/update_insurance_margin_top"
            android:hint="@string/app_spinner_unselected_default"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/primary_subscriber_first_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/primary_subscriber_first_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/update_insurance_first_name"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/primary_subscriber_last_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/primary_subscriber_last_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/update_insurance_last_name"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/primary_subscriber_date_of_birth_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/primary_subscriber_date_of_birth_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:hint="@string/update_insurance_date_of_birth"
                android:inputType="none"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</RelativeLayout>

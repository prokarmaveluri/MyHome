<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_message_swiper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Bottom View Start-->
    <LinearLayout
        android:background="@color/color_mailbox_item_slider"
        android:id="@+id/bottom_wrapper"
        android:layout_width="160dp"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:gravity="end">

        <ImageView
            android:id="@+id/item_message_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/msg_margin_column"
            android:visibility="gone"
            android:src="@drawable/ic_delete_white_24dp"/><!-- only visible for inbox -->

    </LinearLayout>
    <!-- Bottom View End-->

    <!-- "surface view -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/color_msg_list_stripe_1"
        android:padding="@dimen/msg_padding_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/msg_margin_column"
            android:layout_marginRight="@dimen/msg_margin_column"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/messageMetadata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/paperclip"
                        android:layout_width="@dimen/msg_attachment_icon"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:contentDescription="@string/img_desc_ic_email_attachment"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_attachment_black_24dp"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/timestamp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:lines="1"
                        android:maxLines="1"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textAppearance="@style/TextAppearance.AmericanWell.Micro"
                        android:textColor="@color/color_msg_time_blue"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/message_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/messageMetadata"
                    android:layout_toStartOf="@id/messageMetadata"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.AmericanWell.Medium"
                    android:visibility="visible"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/subject_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="@style/TextAppearance.AmericanWell.Small"/>

                <TextView
                    android:id="@+id/preview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textAppearance="@style/TextAppearance.AmericanWell.Small"
                    android:textColor="@color/color_msg_text_secondary"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.americanwell.sdksample.visit.VisitSummaryActivity"
    tools:showIn="@layout/activity_visit_summary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:focusableInTouchMode="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/visit_summary_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="This concludes your visit with John Doe"/>

        <TextView
            android:id="@+id/visit_summary_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            tools:text="Your credit card was charged $100 for this visit"/>

        <TextView
            android:id="@+id/visit_summary_deferred_billilng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            tools:text="sample deferred billing text"/>

        <TextView
            android:id="@+id/visit_summary_feedback_question"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="feedback question"/>

        <com.americanwell.sdksample.util.NonScrollListView
            android:id="@+id/visit_summary_feedback_answers"
            android:focusable="false"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:choiceMode="singleChoice"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:id="@+id/consumer_ratings_provider_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="@string/consumer_ratings_provider"
                android:textAppearance="@style/TextAppearance.AmericanWell.Medium"/>

            <RatingBar
                android:id="@+id/consumer_ratingbar_provider"
                android:theme="@style/RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="@string/consumer_ratings_visit"
                android:textAppearance="@style/TextAppearance.AmericanWell.Medium"/>

            <RatingBar
                android:id="@+id/consumer_ratingbar_visit"
                android:theme="@style/RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/visit_summary_email_summary"/>

        <com.americanwell.sdksample.util.NonScrollListView
            android:id="@+id/visit_summary_email_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:choiceMode="multipleChoice"/>

        <LinearLayout
            android:id="@+id/visit_summary_accept_hipaa_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <CheckBox
                android:id="@+id/visit_summary_accept_hipaa_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/visit_summary_accept_hipaa_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_link"
                android:text="@string/visit_summary_accept_hipaa_notice"/>

        </LinearLayout>

        <View
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_msg_divider_gray"/>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:id="@+id/visit_summary_provider_notes_layout"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AmericanWell.Small"
                android:text="@string/visit_summary_provider_notes"/>

            <TextView
                android:id="@+id/visit_summary_provider_notes_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:id="@+id/visit_summary_diagnoses_layout"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AmericanWell.Small"
                android:text="@string/visit_summary_diagnoses"/>

            <TextView
                android:id="@+id/visit_summary_diagnoses_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:id="@+id/visit_summary_prescriptions_layout"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AmericanWell.Small"
                android:text="@string/visit_summary_prescriptions"/>

            <TextView
                android:id="@+id/visit_summary_prescriptions_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AmericanWell.Small"
                android:text="@string/visit_summary_pharmacy"/>

            <TextView
                android:id="@+id/visit_summary_pharmacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:id="@+id/visit_summary_followup_layout"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AmericanWell.Small"
                android:text="@string/visit_summary_followup"/>

            <TextView
                android:id="@+id/visit_summary_followup_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>


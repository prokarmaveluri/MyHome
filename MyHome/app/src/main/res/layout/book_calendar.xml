<?xml version="1.0" encoding="utf-8"?>
<com.prolificinteractive.materialcalendarview.MaterialCalendarView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/calendar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:mcv_arrowColor="@color/primary"
    app:mcv_dateTextAppearance="@style/DayTextAppearance"
    app:mcv_headerTextAppearance="@style/MonthTextAppearance"
    app:mcv_leftArrowMask="@mipmap/caret_blue"
    app:mcv_rightArrowMask="@mipmap/caret_blue"
    app:mcv_showOtherDates="out_of_range"
    app:mcv_tileHeight="40dp"
    app:mcv_tileWidth="55dp"
    app:mcv_titleAnimationOrientation="horizontal"
    app:mcv_weekDayTextAppearance="@style/WeekDayTextAppearance" />


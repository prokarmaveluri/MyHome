<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="18dp">

    <TextView
        style="@style/tradeGothicLTStd_Dynamic22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/experience"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/certifications_label"
        style="@style/tradeGothicLTStd_Dynamic20"
        android:layout_width="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_height="wrap_content"
        android:text="@string/board_certifications"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/certifications"
        style="@style/tradeGothicLTStd_Dynamic18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Internal Medicine, American Board of Medical Specialities"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/awards_label"
        style="@style/tradeGothicLTStd_Dynamic20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/awards_amp_recognitions"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/awards"
        style="@style/tradeGothicLTStd_Dynamic18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recognized Doctor"
        tools:ignore="HardcodedText" />
</LinearLayout>
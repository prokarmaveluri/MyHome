<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/header"
            style="@style/tradeGothicLTStdLight_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="18dp"
            android:lineSpacingExtra="6sp"
            android:text="@string/contact_us_header"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/subheader"
            style="@style/tradeGothicLTStd_Dynamic22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="18dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:lineSpacingExtra="7sp"
            android:text="@string/contact_us_subheader" />

        <ImageView
            android:id="@+id/email_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/subheader"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="92dp"
            android:src="@mipmap/email" />

        <TextView
            android:id="@+id/email"
            style="style/tradeGothicLTStd_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/email_icon"
            android:layout_below="@id/subheader"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="92dp"
            android:layout_toRightOf="@id/email_icon"
            android:gravity="bottom"
            android:text="hello@dignityhealth.org"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/phone_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/email"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="72dp"
            android:src="@mipmap/phone" />

        <TextView
            android:id="@+id/phone"
            style="style/tradeGothicLTStd_Dynamic20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/phone_icon"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/phone_icon"
            android:autoLink="phone"
            android:gravity="bottom"
            android:text="1-844-274-8497"
            android:textColorLink="@color/primary"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            style="@style/tradeGothicLTStd_Dynamic18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/red"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingTop="12dp"
            android:text="@string/contact_us_warning"
            android:textColor="@color/text_light" />

    </RelativeLayout>
</ScrollView>
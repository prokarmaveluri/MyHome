<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/header"
                style="@style/tradeGothicLTStd_Dynamic34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="12dp"
                android:lineSpacingExtra="6sp"
                android:text="@string/contact_us_header"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/subheader"
                style="@style/tradeGothicLTStd_Dynamic22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/header"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/scalable_18"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:lineSpacingExtra="7sp"
                android:text="@string/contact_us_subheader" />

            <LinearLayout
                android:id="@+id/email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/subheader"
                android:layout_marginTop="@dimen/scalable_64"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/email_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/email" />

                <TextView
                    android:id="@+id/email"
                    style="style/tradeGothicLTStd_Bold_Dynamic20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="hello@dignityhealth.com"
                    android:textColorLink="@color/primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_layout"
                android:layout_marginBottom="100dp"
                android:layout_marginTop="@dimen/scalable_74"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/phone_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/phone" />

                <TextView
                    android:id="@+id/phone"
                    style="style/tradeGothicLTStd_Bold_Dynamic20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:autoLink="phone"
                    android:text="123-456-7890"
                    android:linksClickable="true"
                    android:textColorLink="@color/primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/bottom_layout"
        style="@style/tradeGothicLTStd_Dynamic18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/red"
        android:gravity="center"
        android:lineSpacingExtra="7sp"
        android:paddingBottom="8dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:paddingTop="8dp"
        android:text="@string/contact_us_warning"
        android:textColor="@color/text_light" />
</RelativeLayout>
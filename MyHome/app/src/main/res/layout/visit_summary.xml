<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/doc_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.prokarma.myhome.views.CircularImageView
            android:id="@+id/doc_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerInside" />

        <TextView
            style="@style/tradeGothicLTStdLight_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/doc_image"
            android:text="Richard Paul, MD"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/end_description"
        style="@style/tradeGothicLTStd_Dynamic18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doc_layout"
        android:layout_marginLeft="24dp"
        android:text="@string/your_visit_has_ended" />

    <TextView
        android:id="@+id/cost_description"
        style="@style/tradeGothicLTStd_Dynamic18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/end_description"
        android:layout_below="@+id/end_description"
        android:layout_marginTop="16dp"
        android:text="Your total cost for today's visit was $0.00" />

    <TextView
        android:id="@+id/doctor_notes"
        style="@style/tradeGothicLTStd_Dynamic18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/end_description"
        android:layout_below="@+id/cost_description"
        android:layout_marginTop="16dp"
        android:text="If your doctor is preparing additional information about your visit, you will be able to see it later in your Visit Summaries." />

    <Button
        android:id="@+id/view_report"
        style="@style/primaryButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doctor_notes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="View Visit Report"
        android:textAllCaps="false" />


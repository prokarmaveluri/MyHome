<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="12dp"
        android:paddingEnd="18dp"
        android:paddingStart="18dp"
        android:paddingTop="12dp">

        <com.dignityhealth.myhome.views.CircularImageView
            android:id="@+id/doctor_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            android:src="@mipmap/logo" />

        <TextView
            android:id="@+id/doctor_name"
            style="@style/tradeGothicLTStd_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/doctor_image"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/doctor_image"
            android:text="Dr. Edward Patterson, MD"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/speciality"
            style="@style/tradeGothicLTStd_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/doctor_name"
            android:layout_below="@id/doctor_name"
            android:text="Family Medicine"
            android:textSize="18sp" />

        <Button
            android:id="@+id/book_appointment"
            style="@style/enableButtonStyle"
            android:layout_width="255dp"
            android:layout_height="45dp"
            android:layout_alignLeft="@id/doctor_name"
            android:layout_below="@id/speciality"
            android:layout_marginTop="18dp"
            android:text="@string/book_appointment" />

        <FrameLayout
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/book_appointment"
            android:layout_marginTop="24dp"
            android:background="@color/blazing_purple" />

        <TextView
            android:id="@+id/facility_address"
            style="@style/tradeGothicLTStd_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/map"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="170 Alameda de las Pulgas\nRedwood City, CA 94062"
            android:textSize="20sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/facility_address"
            android:layout_marginTop="12dp"
            android:background="@color/beige" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/divider"
            android:layout_marginTop="28dp"
            android:minHeight="300dp"
            android:orientation="vertical">

            <android.support.design.widget.TabLayout
                android:id="@+id/sliding_tabs"
                style="@style/tradeGothicLTStd_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabIndicatorColor="@color/primary"
                app:tabIndicatorHeight="3dp"
                app:tabMode="fixed" />

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
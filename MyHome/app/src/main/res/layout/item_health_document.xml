<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_health_document_swiper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Bottom View Start-->
    <LinearLayout
        android:background="@color/color_mailbox_item_slider"
        android:id="@+id/bottom_wrapper"
        android:layout_width="160dp"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:gravity="end">

        <ImageView
            android:id="@+id/item_health_document_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/msg_margin_column"
            android:src="@drawable/ic_delete_white_24dp"/>

    </LinearLayout>
    <!-- Bottom View End-->

    <!-- "surface view -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:background="@color/color_msg_list_stripe_1"
        android:padding="@dimen/msg_padding_small">

        <TextView
            android:id="@+id/health_document_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AmericanWell.Medium"/>

        <TextView
            android:id="@+id/health_document_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AmericanWell.Small"/>

    </LinearLayout>

</com.daimajia.swipe.SwipeLayout>

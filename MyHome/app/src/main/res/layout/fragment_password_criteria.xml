<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context="com.prokarma.myhome.features.login.LoginActivity">

        <TextView
            android:id="@+id/password_criteria_title"
            style="@style/tradeGothicLTStdLight_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center_horizontal"
            android:text="@string/password_criteria" />

        <TextView
            android:id="@+id/password_criteria_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_criteria_title"
            android:layout_margin="16dp"
            android:layout_marginTop="32dp"
            android:lineSpacingExtra="4dp" />

        <Button
            android:id="@+id/password_criteria_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/ok" />
    </RelativeLayout>
</layout>
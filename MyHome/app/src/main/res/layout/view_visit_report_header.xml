<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       tools:showIn="@layout/activity_visit_report_detail">

    <TextView
        android:id="@+id/visit_report_practice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AmericanWell.Small"
        tools:text="Cindy's Wild Practice"/>

    <TextView
        android:id="@+id/visit_report_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textAppearance="@style/TextAppearance.AmericanWell.Small"
        tools:text="Visit with Cindy provider1, Nutritionist"/>

    <TextView
        android:id="@+id/visit_report_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textAppearance="@style/TextAppearance.AmericanWell.Small"
        tools:text="Sep 19, 2016 | 11:42 AM EDT | Visit lasted 5 minutes"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:src="@color/color_summary_div"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/visit_report_billing_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textAppearance="@style/TextAppearance.AmericanWell.Small"
        tools:text="Cost: $24.50 (Coupon HALF was applied) - Paid by MasterCard"/>
</merge>
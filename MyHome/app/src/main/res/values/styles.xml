<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="colorControlNormal">@color/accent</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="ToolBarTheme.ToolBarStyle.Light" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textColorSecondary">@color/primary</item>
        <item name="android:textColorPrimaryInverse">@color/toolbar_white_text</item>
    </style>

    <style name="tealButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_boarder_teal</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="grayButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_boarder_grey</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">44dp</item>
    </style>

    <style name="enableButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_enabled</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">44dp</item>
    </style>

    <style name="textStylebase" />

    <style name="tradeGothicLTStd" parent="textStylebase">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/md_blue_grey_650</item>
    </style>

    <style name="tradeGothicLTStdLight" parent="textStylebase">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/md_blue_grey_650</item>
    </style>

    <style name="tradeGothicLTStdLight_16" parent="tradeGothicLTStdLight">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tradeGothicLTStdLight_18" parent="tradeGothicLTStdLight">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="tradeGothicLTStdLight_13" parent="tradeGothicLTStdLight">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="tradeGothicLTStdLight_14" parent="tradeGothicLTStdLight">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tradeGothicLTStdLight_20" parent="tradeGothicLTStdLight">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="tradeGothicLTStdLight_24" parent="tradeGothicLTStdLight">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MonthTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Header">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="WeekDayTextAppearance" parent="TextAppearance.MaterialCalendarWidget.WeekDay">
        <item name="android:textColor">@color/text_darker</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
        <!--<item name="android:textSize">16sp</item>-->
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="DayTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Date">
        <!--<item name="android:textColor">@color/primary</item>-->
        <item name="android:typeface">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
        <!--<item name="android:textSize">16sp</item>-->
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>
